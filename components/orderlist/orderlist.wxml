<!--components/orderlist/orderlist.wxml-->
<view class="orderBox"  >
    <view class="title">
      <text>订单号：20220509140712345678</text>
      <text class="copy" catchtap="copyMsg">复制</text>
    </view>
   <view class="orderbody">
    <view class="locaItem flexItem">
      <view class="itemtext">{{listdata.setout}}</view>
      <view class="itemicon">
        <image class="img" src="../../assets/images/sharpicons_airplane.png"></image>
        <text style="color:#6777d5 ; font-size: 28rpx;">{{listdata.text}}</text>
      </view>
      <view class="itemtext">{{listdata.target}}</view>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 0 }}">
      <button  class="btn btn1" >待支付</button>
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 1 }}">
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 2 }}">
      <!-- <button  class="btn btn1" >待支付</button> -->
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 3 }}">
      <!-- <button  wx:if="{{listdata.stauts == 1 }}" class="btn btn1" >待支付</button> -->
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 4 }}">
      <!-- <button  class="btn btn1" >待支付</button> -->
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 5 }}">
      <!-- <button  class="btn btn1" >物流详情</button> -->
      <button class="btn btn2">详情</button>
    </view>
    <view class="orderBtn" wx:if="{{listdata.stauts == 6 }}">
      <button class="btn btn2">详情</button>
    </view>
   </view>
    </view>
 
