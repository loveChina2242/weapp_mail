/* pages/user/user.wxss */
.container {
  width: 100vw;
  height: 100vh;
  background: #f3f3f3;
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: cornflowerblue;
  height: 300rpx;
  text-align: center;
}

.header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 3px solid #fff;
  overflow: hidden;
}

.header .name {
  height: 45rpx;
  margin-top: 14rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #fff;
}

.order {
  margin-top: 20rpx;
  background: #fff;
  padding: 26rpx 30rpx 0;
}

.order .title-box {
  position: relative;
  width: 320rpx;
  height: 42rpx;
  margin: 0 auto;
}


.order-list {
  display: flex;
  height: 230rpx;
  align-items: center;
  background: #fff;
}

.order-item {
  width: 50%;
  text-align: center;
}

.order-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 6rpx;
}

.order-item view {
  color: #333;
  font-size: 28rpx;
}

.other {
  margin-top: 20rpx;
  background: #fff;
}

.other-item {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.other-item::after {
  position: absolute;
  right: 30rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  transform: translateY(-50%) rotate(135deg);
}
/* 覆盖按钮的默认样式 */
.other .btn{
   width:100%;
   border:none;
   border-radius: 0;
   padding:0;
   margin:0;
   font-size: 1em;
   position: static;
   line-height: normal;
   color: #333;
   text-align: left;
   background: #fff;
}
.other .btn::after{
  content: none;
}
.other .iconfont{
  display: inline-block;
  line-height: 100rpx;
  margin-right: 8rpx;
  font-size: 32rpx;
  color: #333;
}
.customer .iconfont{
  font-size: 38rpx;
}
.about .iconfont{
  opacity: 0.8;
}